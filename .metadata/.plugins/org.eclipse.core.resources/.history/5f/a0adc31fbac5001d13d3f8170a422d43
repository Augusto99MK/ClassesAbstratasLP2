package geral;

public class Quadrado extends FormaBidimensional {
	
	private double lado;

	public double getlado() {
		return lado;
	}

	public void setlado(double lado) {
		if (lado >=0) {
			this.lado = lado;
			calcularArea();
			calcularPerimetro();
		}
	}
	
	
	 private void calcularArea() {
	        setArea(lado * lado);
	    }
	    
